@using System.Web.UI.HtmlControls

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @Styles.Render("~/Content/bootstrapcss")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle"
                    data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Basic WMS", "Index", "Home", routeValues: null, htmlAttributes: new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Productos", "Index", "Product", routeValues: null, htmlAttributes: new { @class = "nav-link" })
                        <!--<a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>-->
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Incoming Purchases", "Index", "Purchase", routeValues: null, htmlAttributes: new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("About Me", "Index", "AboutMe", routeValues: null, htmlAttributes: new { @class = "nav-link" })
                    </li>
                </ul>
                <div class="navbar-right">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </div>

    @RenderSection("featured", required: false)

    <div class="body-content">
        @RenderBody()
        
        
    </div>
    <footer class="text-center">

            <span class="text-muted text-capitalize">&copy; @DateTime.Now.Year - Basic WMS</span>
        </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrapjs")
    @RenderSection("scripts", required: false)

</body>



</html>
